# Example Terraform Variables
# Copy this file to terraform.tfvars and fill in your values

# Required: GCP Project Configuration
project_id      = "your-project-id"
project_name    = "Your Project Name"
region          = "us-central1"
billing_account = "XXXXXX-XXXXXX-XXXXXX"

# Required: GitHub Repository (for Workload Identity Federation)
github_repo = "your-org/your-repo"

# Optional: Google OAuth for Firebase Auth
# Get these from Google Cloud Console > APIs & Services > Credentials
oauth_client_id     = ""
oauth_client_secret = ""

# Optional: Apple Sign-In for Firebase Auth
# Get these from Apple Developer Console
apple_team_id     = ""
apple_key_id      = ""
apple_private_key = ""
apple_bundle_id   = ""

# Optional: Expo Mobile App Configuration
# These create Firebase iOS and Android apps for the Expo app
# Use reverse domain notation (e.g., com.yourcompany.expoapp)
expo_ios_bundle_id        = ""
expo_android_package_name = ""

# Optional: Web Push Notifications
# Get VAPID key from Firebase Console: Project Settings > Cloud Messaging > Web Push certificates
fcm_vapid_key = ""

# =============================================================================
# Frontend Deployment Platform
# =============================================================================
# Choose where to deploy the frontend. Options:
#   - "cloudrun" (default): Deploy to Google Cloud Run
#   - "vercel": Deploy to Vercel
#   - "netlify": Deploy to Netlify
#
# The backend always runs on Cloud Run. Only the frontend can be deployed elsewhere.
frontend_platform = "cloudrun"

# Vercel Configuration (required if frontend_platform = "vercel")
# Get API token from: https://vercel.com/account/tokens
# Find org/team ID in Vercel dashboard settings
vercel_api_token = ""
vercel_org_id    = ""

# Netlify Configuration (required if frontend_platform = "netlify")
# Get token from: https://app.netlify.com/user/applications#personal-access-tokens
netlify_token = ""
